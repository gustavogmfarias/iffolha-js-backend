    "paths": {
        "/sessions": {
            "post": {
                "tags": ["Authenticate"],
                "summary": "Authentication user",
                "description": "Authentication user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": { "type": "string" },
                                    "password": { "type": "string" }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": { "description": "E-mail or password incorrect" }
                }
            }
        },
        "/users": {
            "post": {
                "tags": ["Users"],
                "summary": "Create Users",
                "description": "Create a new user",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "last_name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Your name",
                                    "last_name": "Your Last Name",
                                    "password": "teste",
                                    "email": "teste@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "User already exists"
                    }
                }
            },
            "get": {
                "tags": ["Users"],
                "summary": "List all Users",
                "description": "List all Users",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Number of the page of view",
                        "required": false,
                        "Schema": { "type": "string" }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of objects in the page of view",
                        "required": false,
                        "Schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "email": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "last_name": {
                                                "type": "string"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "avatar_url": {
                                                "type": "string"
                                            },
                                            "role": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/avatar": {
            "patch": {
                "tags": ["Users"],
                "summary": "Change Avatar",
                "description": "Upload a new Avatar",
                "security": [{ "bearerAuth": [] }],

                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "avatar": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/users/change-password": {
            "patch": {
                "tags": ["Users"],
                "summary": "Change Own Password",
                "description": "Change your own password",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "old_password": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "confirm_password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "old_password": "Your last password",
                                    "password": "Your new Password",
                                    "confirm_password": "The same password you fill out before"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated"
                    },
                    "401": {
                        "description": "Last Password doesn't match"
                    },
                    "401": {
                        "description": "Passwords don't match"
                    }
                }
            }
        },
        "/users/update/{id}": {
            "patch": {
                "tags": ["Users"],
                "summary": "Update Users",
                "description": "Update Users",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User id",
                        "required": true,
                        "Schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "last_name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "role": {
                                        "type": "string"
                                    },
                                    "old_password": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "confirm_password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Your name",
                                    "last_name": "Your Last Name",
                                    "role": "User",
                                    "old_password": "teste1",
                                    "password": "teste2",
                                    "confirm_password": "teste2",
                                    "email": "teste@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated"
                    },
                    "401 A": {
                        "description": "Last Password doesn't match"
                    },
                    "401 B": {
                        "description": "Passwords don't match"
                    }
                }
            }
        },
        "/users/profile": {
            "get": {
                "tags": ["Users"],
                "summary": "Show the user logged's profile",
                "description": "Show the user logged's profile",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],

                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "email": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "last_name": {
                                                "type": "string"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "avatar_url": {
                                                "type": "string"
                                            },
                                            "role": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/delete/{id}": {
            "delete": {
                "tags": ["Users"],
                "summary": "Delete a user",
                "description": "Delete a user",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User id",
                        "required": true,
                        "Schema": { "type": "string" }
                    }
                ],

                "responses": {
                    "200": {
                        "description": "User Deleted Successfully"
                    },
                    "404": {
                        "description": "User doesn't exists"
                    }
                }
            }
        },

        "/categories/import": {
            "post": {
                "tags": ["Category"],
                "summary": "Upload a new category",
                "description": "Upload a new category",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            },
                            "response": {
                                "201": {
                                    "description": "Created"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/specifications": {
            "post": {
                "tags": ["Specifications"],
                "summary": "Create Specification",
                "description": "Create a new specification",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Specification"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": { "description": "Specification already exists!" }
                }
            }
        },

        "/cars": {
            "post": {
                "tags": ["Cars"],
                "summary": "Create a New Car",
                "description": "Create a new car",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Car"
                            }
                        }
                    }
                },
                "201": {
                    "description": "Created"
                },
                "400": { "description": "Car already exists" }
            }
        },

        "/cars/images/{id}": {
            "post": {
                "tags": ["Cars"],
                "summary": "Upload Images",
                "description": "Upload Images",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Car id",
                        "required": true,
                        "Schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "avatar": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        }
    },
    "definitions": {
