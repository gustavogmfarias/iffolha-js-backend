                "description": {
                    "type": "string"
                }
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "last_name": { "type": "string" },
                "email": { "type": "string" },
                "avatar_url": { "type": "string" },
                "role": { "type": "string" }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
